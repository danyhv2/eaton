<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Choose a view"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Choose a view">
                <items jcr:primaryType="cq:WidgetCollection">
                    <view
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        defaultValue="nofeaturedarticle"
                        fieldDescription="Choose a view"
                        fieldLabel="View"
                        fieldSubLabel=""
                        name="./view"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <nofeaturedarticle
                                jcr:primaryType="nt:unstructured"
                                text="No Featured Article"
                                value="nofeaturedarticle"/>
                            <featuredarticle
                                jcr:primaryType="nt:unstructured"
                                text="Featured Article"
                                value="featuredarticle"/>
                            <article-list-single-feature
                                jcr:primaryType="nt:unstructured"
                                text="Article List: Single Feature"
                                value="article-list-single-feature"/>
                            <related-products
                                jcr:primaryType="nt:unstructured"
                                text="Related Products"
                                value="related-products"/>
                            <links
                                jcr:primaryType="nt:unstructured"
                                text="Links"
                                value="links"/>
                            <top-list-with-icon
                                jcr:primaryType="nt:unstructured"
                                text="Top List With Icon"
                                value="top-list-with-icon"/>
                        </options>
                    </view>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
