<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Choose a view"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Choose a view">
                <items jcr:primaryType="cq:WidgetCollection">
                    <view
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        defaultValue="card"
                        fieldDescription="Choose a view"
                        fieldLabel="View"
                        fieldSubLabel=""
                        name="./view"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <card
                                jcr:primaryType="nt:unstructured"
                                text="Card"
                                value="card"/>
                            <page-overview
                                jcr:primaryType="nt:unstructured"
                                text="Page Overview"
                                value="page-overview"/>
                            <l2-hero
                                jcr:primaryType="nt:unstructured"
                                text="L2 Hero"
                                value="l2-hero"/>
                            <singleFeature
                                jcr:primaryType="nt:unstructured"
                                text="Single Feature"
                                value="single-feature"/>
                            <feature-block
                                jcr:primaryType="nt:unstructured"
                                text="Feature Block"
                                value="feature-block"/>
                            <article-feature
                                jcr:primaryType="nt:unstructured"
                                text="Article Feature"
                                value="article-feature"/>
                        </options>
                    </view>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
