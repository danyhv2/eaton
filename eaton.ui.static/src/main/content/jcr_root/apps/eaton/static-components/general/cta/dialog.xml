<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
  jcr:primaryType="cq:Dialog"
  xtype="dialog">
  <items
    jcr:primaryType="cq:Widget"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
      <tab1
        jcr:primaryType="cq:Panel"
        title="Component Properties - Classic UI"
        xtype="panel">
        <items jcr:primaryType="cq:WidgetCollection">
          <view
            jcr:primaryType="cq:Widget"
            allowBlank="false"
            defaultValue="default"
            fieldDescription="Determine which variation of component to view"
            fieldLabel="View"
            fieldSubLabel=""
            name="./view"
            type="select"
            xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
              <default
                jcr:primaryType="nt:unstructured"
                text="Default View"
                value="default"/>
              <link
                jcr:primaryType="nt:unstructured"
                text="Link View"
                value="link"/>
            </options>
          </view>
          <theme
            jcr:primaryType="cq:Widget"
            allowBlank="false"
            defaultValue="primary-light"
            fieldDescription="Determine the appearance of the CTA"
            fieldLabel="Theme"
            name="./theme"
            type="select"
            xtype="selection">
            <options jcr:primaryType="cq:WidgetCollection">
              <primary-light
                jcr:primaryType="nt:unstructured"
                text="Primary theme over Light background"
                value="primary-light"/>
              <primary-dark
                jcr:primaryType="nt:unstructured"
                text="Primary theme over Dark background"
                value="primary-dark"/>
              <secondary-light
                jcr:primaryType="nt:unstructured"
                text="Secondary theme over Light background"
                value="secondary-light"/>
              <secondary-dark
                jcr:primaryType="nt:unstructured"
                text="Secondary theme over Dark background"
                value="secondary-dark"/>
              <tertiary-light
                jcr:primaryType="nt:unstructured"
                text="Tertiary theme over Light background"
                value="tertiary-light"/>
              <tertiary-dark
                jcr:primaryType="nt:unstructured"
                text="Tertiary theme over Dark background"
                value="tertiary-dark"/>
            </options>
          </theme>
          <title
            jcr:primaryType="cq:Widget"
            allowBlank="true"
            fieldLabel="Title"
            name="./title"
            xtype="textfield"
            inputType="text"/>
        </items>
      </tab1>
    </items>
  </items>
</jcr:root>
