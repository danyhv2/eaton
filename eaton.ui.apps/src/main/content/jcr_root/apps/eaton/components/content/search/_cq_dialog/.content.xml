<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <view
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        class="cq-dialog-dropdown-showhide "
                        cq-dialog-dropdown-showhide-target=".search-hide-show"
                        fieldLabel="view"
                        name="./view"
                        required="true">
                        <items jcr:primaryType="nt:unstructured">
                            <site-search
                                jcr:primaryType="nt:unstructured"
                                text="Site Search"
                                value="site-search"/>
                            <product-search
                                jcr:primaryType="nt:unstructured"
                                text="Product Search"
                                value="product-search"/>
                            <career-search
                                jcr:primaryType="nt:unstructured"
                                text="Career Search"
                                value="career-search"/>
                        </items>
                    </view>
                    <transFieldAid
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Field Aid"
                        name="./transFieldAid"
                        required="true"
                        showFor="site-search"/>
                    <transSearchHeader
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        class="hide search-hide-show"
                        fieldLabel="Search Header"
                        name="./transSearchHeader"
                        required="true"
                        showhidetargetvalue="product-search,career-search"/>
                    <transSubhead
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        class="hide search-hide-show"
                        fieldLabel="Sub Head"
                        name="./transSubhead"
                        showhidetargetvalue="product-search,career-search"/>
                    <searchResutlsPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                        class="hide search-hide-show"
                        fieldLabel="Search Result Page Path"
                        name="./searchResutlsPath"
                        required="true"
                        rootPath="/content/eaton"
                        showhidetargetvalue="product-search,career-search"/>
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide search-hide-show"
                        showhidetargetvalue="product-search,career-search">
                        <items jcr:primaryType="nt:unstructured">
                            <relevantLinks
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                class="full-width"
                                eaem-nested=""
                                fieldLabel="Relevant Links">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                    name="./relevantLinks">
                                    <layout
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                        method="absolute"/>
                                    <items jcr:primaryType="nt:unstructured">
                                        <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <link
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                    fieldLabel="Link Page"
                                                    name="./link"
                                                    rootPath="/content/eaton"/>
                                                <transLinkText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                    fieldLabel="Link Text"
                                                    name="./transLinkText"/>
                                                <newWindow
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    name="./newWindow"
                                                    text="Open in New Window"
                                                    value="false"/>
                                            </items>
                                        </column>
                                    </items>
                                </field>
                            </relevantLinks>
                        </items>
                    </column>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
