<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Social Link"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <header
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldDescription="This field stores the value for Header field."
                        fieldLabel="Header"
                        name="./header"
                        required="true"/>
                    <socialOptions
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                        eaem-nested=""
                        fieldLabel="Social Links">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                            name="./socialLinks">
                            <layout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                method="absolute"/>
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <socialLinkType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                            fieldDescription="This field stores the css of social link. It is driven from authored configured values."
                                            fieldLabel="Social Link Type"
                                            name="./socialLinkType"
                                            required="true">
                                            <items jcr:primaryType="nt:unstructured">
                                                <facebook
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Facebook"
                                                    value="facebook"/>
                                                <linked-in
                                                    jcr:primaryType="nt:unstructured"
                                                    text="LinkedIn"
                                                    value="linked-in"/>
                                                <twitter
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Twitter"
                                                    value="twitter"/>
                                                <googleplus
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Google+"
                                                    value="googleplus"/>
                                                <pinterest
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Pinterest "
                                                    value="pinterest"/>
                                            </items>
                                        </socialLinkType>
                                        <path
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                            fieldDescription="Social link path. It should be external path."
                                            fieldLabel="Social Links"
                                            name="./path"
                                            required="true"
                                            rootPath="/content"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </socialOptions>
                    <viewAllText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldDescription="This field stores the View All text value"
                        fieldLabel="View all Text"
                        name="./viewAllText"/>
                    <viewAllLinkPath
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                        fieldDescription="This field stores the View All Link Path"
                        fieldLabel="View all Link Path"
                        name="./viewAllLinkPath"
                        rootPath="/content"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
