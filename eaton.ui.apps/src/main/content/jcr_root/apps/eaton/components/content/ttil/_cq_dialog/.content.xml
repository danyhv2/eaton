<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="TTIL"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <herotext
                jcr:primaryType="nt:unstructured"
                jcr:title="Component Properties"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <view
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="Determine which variation of component to view"
                                fieldLabel="View"
                                name="./view"
                                required="true">
                                <items jcr:primaryType="nt:unstructured">
                                    <card
                                        jcr:primaryType="nt:unstructured"
                                        text="Default (Card)"
                                        value="card"/>
                                    <feature-block
                                        jcr:primaryType="nt:unstructured"
                                        text="Feature Block"
                                        value="feature-block"/>
                                    <page-overview
                                        jcr:primaryType="nt:unstructured"
                                        text="Page Overview"
                                        value="page-overview"/>
                                    <topic-link-white
                                        jcr:primaryType="nt:unstructured"
                                        text="Topic Link White"
                                        value="topic-link-white"/>
                                    <topic-link-blue
                                        jcr:primaryType="nt:unstructured"
                                        text="Topic Link Blue"
                                        value="topic-link-blue"/>
                                    <image-right
                                        jcr:primaryType="nt:unstructured"
                                        text="Image Right"
                                        value="image-right"/>
                                    <image-left
                                        jcr:primaryType="nt:unstructured"
                                        text="Image Left"
                                        value="image-left"/>
                                    <l2-hero
                                        jcr:primaryType="nt:unstructured"
                                        text="L2 Hero"
                                        value="l2-hero"/>
                                    <singleFeature
                                        jcr:primaryType="nt:unstructured"
                                        text="Single Feature"
                                        value="single-feature"/>
                                </items>
                            </view>
                            <header
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="This field stores the value for Header."
                                fieldLabel="Header"
                                name="./header"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="This field stores the path of the image from DAM."
                                fieldLabel="Image"
                                name="./image"
                                required="true"
                                rootPath="/content/dam/eaton"/>
                            <imageAlignment
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="This field stores the image alignment value."
                                fieldLabel="Image Alignment"
                                name="./imageAlignment">
                                <items jcr:primaryType="nt:unstructured">
                                    <left
                                        jcr:primaryType="nt:unstructured"
                                        text="Left"
                                        value="left"/>
                                    <right
                                        jcr:primaryType="nt:unstructured"
                                        text="Right"
                                        value="right"/>
                                </items>
                            </imageAlignment>
                            <alttxt
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="This field stores the value for Alt txt of the image."
                                fieldLabel="Alt Txt"
                                name="./alttxt"/>
                            <icon
                                jcr:primaryType="nt:unstructured"
                                fieldDescription="This field should appear for Topic link with white and blue"
                                fieldLabel="Icon"
                                name="./icon"
                                rootPath="/content/dam/eaton"/>
                            <eyebrow
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="This field stores the value for eyebrow field."
                                fieldLabel="Eyebrow"
                                name="./transEyebrow"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                fieldDescription="This field stores the path of page to be linked."
                                fieldLabel="Link"
                                name="./link"
                                required="true"
                                rootPath="/content/eaton"/>
                            <link-title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldDescription="This field stores the link title value."
                                fieldLabel="Link Title"
                                name="./linkTitle"/>
                            <new-window
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                fieldDescription="This field indicates if the url would open in new window or not."
                                name="./newWindow"
                                text="Open in New Window"
                                value="true"/>
                            <description
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textarea"
                                fieldDescription="This field indicated about the short description of the TTIL"
                                fieldLabel="Description"
                                name="./description"/>
                            <color
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldDescription="This field indicated about the color."
                                fieldLabel="Color"
                                name="./color">
                                <items jcr:primaryType="nt:unstructured">
                                    <white
                                        jcr:primaryType="nt:unstructured"
                                        text="White"
                                        value="white"/>
                                    <blue
                                        jcr:primaryType="nt:unstructured"
                                        text="Blue"
                                        value="#005EB8"/>
                                </items>
                            </color>
                        </items>
                    </column>
                </items>
            </herotext>
        </items>
    </content>
</jcr:root>
