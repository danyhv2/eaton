<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="TTIL List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <view
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldLabel="View"
                        name="./view"
                        required="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <article-no-feature
                                jcr:primaryType="nt:unstructured"
                                text="Article List"
                                value="no-feature"/>
                            <single-feature
                                jcr:primaryType="nt:unstructured"
                                text="Article List with Feature"
                                value="single-feature"/>
                            <related-items-text
                                jcr:primaryType="nt:unstructured"
                                text="Related Items With Text"
                                value="related-products-text-only"/>
                            <related-items-images
                                jcr:primaryType="nt:unstructured"
                                text="Related Items With Images"
                                value="related-products-with-images"/>
                            <feature-list
                                jcr:primaryType="nt:unstructured"
                                text="Feature List"
                                value="fea-list"/>
                            <feature-story
                                jcr:primaryType="nt:unstructured"
                                text="Featured Story"
                                value="fea-story"/>
                        </items>
                    </view>
                    <header
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Header"
                        name="./transHeader"
                        required="{Boolean}true"/>
                    <header-link
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                        fieldLabel="Header Link"
                        name="./headerLink"
                        required="{Boolean}true"
                        rootPath="/content/eaton"/>
                    <newWindow
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                        name="./newWindow"
                        text="Open in New Window"
                        value="true"/>
                    <list-type
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        class="cq-dialog-dropdown-showhide "
                        cq-dialog-dropdown-showhide-target=".ttil-list-hide-show"
                        fieldLabel="List Type"
                        name="./listType"
                        required="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <child-pages
                                jcr:primaryType="nt:unstructured"
                                text="Child Pages"
                                value="child-pages"/>
                            <tags
                                jcr:primaryType="nt:unstructured"
                                text="Tags"
                                value="tags"/>
                            <fixed-list
                                jcr:primaryType="nt:unstructured"
                                text="Fixed List"
                                value="fixed-list"/>
                            <manual-list
                                jcr:primaryType="nt:unstructured"
                                text="Manual List"
                                value="manual-list"/>
                        </items>
                    </list-type>
                    <parent-page
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                        class="hide ttil-list-hide-show"
                        fieldLabel="Parent Page"
                        name="./parentPage"
                        rootPath="/content/eaton"
                        showhidetargetvalue="child-pages"/>
                    <fixed-links
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                        class="full-width,hide ttil-list-hide-show"
                        eaem-nested=""
                        fieldDescription="Click '+' to add more Links"
                        fieldLabel="Fixed Links"
                        showhidetargetvalue="fixed-list">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                            name="./fixedLinks">
                            <layout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                method="absolute"/>
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <link-path
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                            fieldLabel="Link Path"
                                            multiple="{Boolean}false"
                                            name="./linkPath"
                                            rootPath="/content/eaton"/>
                                        <newWindo
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                            name="./newWindowFixed"
                                            text="Open Link in new Window"
                                            value="true"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </fixed-links>
                    <manual-links
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                        class="full-width,hide ttil-list-hide-show"
                        eaem-nested=""
                        fieldDescription="Click '+' to add more manual Links"
                        fieldLabel="Manual Links"
                        showhidetargetvalue="manual-list">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                            name="./manualLinks">
                            <layout
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                method="absolute"/>
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <eyebrow
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            fieldLabel="Eyebrow"
                                            name="./eyebrow"/>
                                        <headline
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            fieldLabel="Headline"
                                            name="./transHeadline"/>
                                        <link-destination
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                            fieldLabel="Link Destionation"
                                            name="./transLinkDestination"
                                            rootPath="/content/eaton"/>
                                        <publictn-date
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                            fieldLabel="Publication Date"
                                            name="./publicationDate"/>
                                        <featureImage
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                            fieldLabel="Feature Image"
                                            name="./featureImage"
                                            rootPath="/content/dam/eaton"/>
                                        <altText
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                            fieldLabel="Alt Txt"
                                            name="./transAltTxt"/>
                                        <description
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/textarea"
                                            fieldLabel="Description"
                                            name="./transDescription"
                                            required="{Boolean}true"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </manual-links>
                    <tags
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/common/tagspicker"
                        allowBulkEdit="{Boolean}true"
                        allowCreate="{Boolean}true"
                        class="hide ttil-list-hide-show"
                        cq-msm-lockable="tags"
                        fieldLabel="Tags"
                        name="./tags"
                        showhidetargetvalue="tags"/>
                    <sort
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        class="hide ttil-list-hide-show"
                        fieldLabel="Sort"
                        name="./sort"
                        showhidetargetvalue="child-pages,tags">
                        <items jcr:primaryType="nt:unstructured">
                            <pub-date
                                jcr:primaryType="nt:unstructured"
                                text="Publication Date"
                                value="pub-date"/>
                            <title
                                jcr:primaryType="nt:unstructured"
                                text="Title"
                                value="title"/>
                            <created-date
                                jcr:primaryType="nt:unstructured"
                                text="Created Date"
                                value="created-date"/>
                            <last-modified-date
                                jcr:primaryType="nt:unstructured"
                                text="Last Modified Date"
                                value="last-modified-date"/>
                            <template
                                jcr:primaryType="nt:unstructured"
                                text="Template"
                                value="template"/>
                        </items>
                    </sort>
                    <no-of-result
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                        class="hide ttil-list-hide-show"
                        fieldLabel="No. Of Results"
                        name="./count"
                        showhidetargetvalue="child-pages,tags"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
