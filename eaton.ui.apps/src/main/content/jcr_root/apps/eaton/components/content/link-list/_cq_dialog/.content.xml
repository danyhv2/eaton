<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Link List"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <view
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <view
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        class="cq-dialog-dropdown-showhide"
                                        cq-dialog-dropdown-showhide-target=".list-view-hide-show"
                                        fieldLabel="View"
                                        name="./view"
                                        required="true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <verical-link-list
                                                jcr:primaryType="nt:unstructured"
                                                text="Vertical Link List"
                                                value="verical-link-list"/>
                                            <horizontal-link-list
                                                jcr:primaryType="nt:unstructured"
                                                text="Horizontal Link List"
                                                value="horizontal-link-list"/>
                                            <download-list-view
                                                jcr:primaryType="nt:unstructured"
                                                text="Download List view"
                                                value="download-list-view"/>
                                            <download-list-view-with-description
                                                jcr:primaryType="nt:unstructured"
                                                text="Download List View With Description"
                                                value="download-list-view-with-description"/>
                                            <social-list
                                                jcr:primaryType="nt:unstructured"
                                                text="Social List"
                                                value="social-list"/>
                                            <primary-nav
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary Nav"
                                                value="primary-nav"/>
                                        </items>
                                    </view>
                                </items>
                            </column>
                        </items>
                    </view>
                    <listBGColor
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-view-hide-show"
                        showhidetargetvalue="verical-link-list,download-list-view,download-list-view-with-description,horizontal-link-list">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <listBGColor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldLabel="List BG Color"
                                        name="./listBGColor"
                                        required="true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <white
                                                jcr:primaryType="nt:unstructured"
                                                text="White"
                                                value="white"/>
                                            <dark-grey
                                                jcr:primaryType="nt:unstructured"
                                                text="Dark Grey"
                                                value="dark-grey"/>
                                        </items>
                                    </listBGColor>
                                </items>
                            </column>
                        </items>
                    </listBGColor>
                    <transHeader
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-view-hide-show"
                        showhidetargetvalue="verical-link-list,download-list-view,download-list-view-with-description">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <transHeader
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Header"
                                        name="./transHeader"/>
                                </items>
                            </column>
                        </items>
                    </transHeader>
                    <headerLink
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-view-hide-show"
                        showhidetargetvalue="verical-link-list,download-list-view,download-list-view-with-description">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <headerLink
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Header Link"
                                        name="./headerLink"
                                        rootPath="/content/eaton"/>
                                </items>
                            </column>
                        </items>
                    </headerLink>
                    <newWindow
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-view-hide-show"
                        showhidetargetvalue="verical-link-list,download-list-view,download-list-view-with-description">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <newWindow
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        name="./newWindow"
                                        text="Open in New Window"
                                        value="true"/>
                                </items>
                            </column>
                        </items>
                    </newWindow>
                    <list-type
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-view-hide-show"
                        showhidetargetvalue="verical-link-list,horizontal-link-list,primary-nav">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <list-type
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        class="cq-dialog-dropdown-showhide"
                                        cq-dialog-dropdown-showhide-target=".list-type-hide-show"
                                        fieldLabel="List Type"
                                        name="./listType"
                                        required="true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <child-pages
                                                jcr:primaryType="nt:unstructured"
                                                text="Child Page"
                                                value="child-pages"/>
                                            <tags
                                                jcr:primaryType="nt:unstructured"
                                                text="Tags"
                                                value="tags"/>
                                            <fixed-list
                                                jcr:primaryType="nt:unstructured"
                                                text="Fixed List"
                                                value="fixed-list"/>
                                            <manual-list
                                                jcr:primaryType="nt:unstructured"
                                                text="Manual"
                                                value="manual-list"/>
                                        </items>
                                    </list-type>
                                </items>
                            </column>
                        </items>
                    </list-type>
                    <parentPage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-type-hide-show"
                        showhidetargetvalue="child-pages">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <parentPage
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Parent Page"
                                        name="./parentPage"
                                        rootPath="/content"/>
                                </items>
                            </column>
                        </items>
                    </parentPage>
                    <tags
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-type-hide-show"
                        showhidetargetvalue="tags">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <tags
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/common/tagspicker"
                                        fieldLabel="Tags"
                                        name="./tags"/>
                                </items>
                            </column>
                        </items>
                    </tags>
                    <sort
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-type-hide-show"
                        showhidetargetvalue="tags,child-pages">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <sort
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldLabel="Sort"
                                        name="./sort"
                                        required="true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <publication-date
                                                jcr:primaryType="nt:unstructured"
                                                text="Publication Date"
                                                value="pub-date"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                text="Title"
                                                value="title"/>
                                            <created-date
                                                jcr:primaryType="nt:unstructured"
                                                text="Created Date"
                                                value="created-date"/>
                                            <last-modified
                                                jcr:primaryType="nt:unstructured"
                                                text="Last Modified "
                                                value="last-modified-date"/>
                                            <template
                                                jcr:primaryType="nt:unstructured"
                                                text="Template"
                                                value="template"/>
                                        </items>
                                    </sort>
                                </items>
                            </column>
                        </items>
                    </sort>
                    <count
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-type-hide-show"
                        showhidetargetvalue="tags,child-pages">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <count
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                        fieldDescription="This field stores the value for no of results field"
                                        fieldLabel="No of Results"
                                        min="{Long}0"
                                        name="./count"/>
                                </items>
                            </column>
                        </items>
                    </count>
                    <fixedLinks
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-type-hide-show"
                        showhidetargetvalue="fixed-list">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <fixedLinks
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        class="foundation-layout-util-maximized-alt"
                                        eaem-nested=""
                                        fieldLabel="Fixed Links">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            name="./fixedLinks">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <linkPath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            fieldLabel="Link Path"
                                                            name="./linkPath"
                                                            rootPath="/content/eaton"/>
                                                        <newWindowFixed
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                            name="./newWindowFixed"
                                                            text="Open in New Window"
                                                            value="false"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </fixedLinks>
                                </items>
                            </column>
                        </items>
                    </fixedLinks>
                    <manualLinks
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-type-hide-show list-view-hide-show"
                        showhidetargetvalue="manual-list,verical-link-list,horizontal-link-list,download-list-view,download-list-view-with-description,primary-nav">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <manualLinks
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        class="foundation-layout-util-maximized-alt"
                                        eaem-nested=""
                                        fieldLabel="Manual Links">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            name="./manualLinks">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <linkTitle
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            fieldLabel="Link Title"
                                                            name="./transLinkTitle"/>
                                                        <transDescription
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                            class="list-view-hide-show"
                                                            fieldLabel="Description"
                                                            name="./transDescription"
                                                            showhidetargetvalue="download-list-view-with-description"/>
                                                        <overlaypath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            class="list-view-hide-show"
                                                            fieldLabel="OverLay Path"
                                                            name="./overlayPath"
                                                            rootPath="/content/eaton"
                                                            showhidetargetvalue="primary-nav"/>
                                                        <assetPath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            class="list-view-hide-show"
                                                            fieldLabel="Asset Path"
                                                            name="./assetPath"
                                                            rootPath="/content/dam/eaton"
                                                            showhidetargetvalue="download-list-view,download-list-view-with-description"/>
                                                        <pagePath
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            class="list-view-hide-show"
                                                            fieldLabel="Page Path"
                                                            name="./pageLink"
                                                            rootPath="/content/eaton"
                                                            showhidetargetvalue="verical-link-list,horizontal-link-list,primary-nav"/>
                                                        <newWindow
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                            class="list-view-hide-show"
                                                            name="./newWindowManual"
                                                            showhidetargetvalue="verical-link-list,horizontal-link-list,primary-nav"
                                                            text="Open in New Window"
                                                            value="true"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </manualLinks>
                                </items>
                            </column>
                        </items>
                    </manualLinks>
                    <socialOptions
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-view-hide-show"
                        showhidetargetvalue="social-list">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <socialOptions
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        class="foundation-layout-util-maximized-alt"
                                        eaem-nested=""
                                        fieldLabel="Social Options">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            name="./socialLinks">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <social-sites
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/select"
                                                            fieldLabel="Social Sites"
                                                            name="./social-sites"
                                                            required="true">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <facebook
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Facebook"
                                                                    value="facebook"/>
                                                                <linked-in
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="LinkedIn"
                                                                    value="linked-in"/>
                                                                <twitter
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Twitter"
                                                                    value="twitter"/>
                                                                <googleplus
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Google+"
                                                                    value="googleplus"/>
                                                                <pinterest
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Pinterest "
                                                                    value="pinterest"/>
                                                            </items>
                                                        </social-sites>
                                                        <social-links
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                            fieldLabel="Social Links"
                                                            name="./social-links"
                                                            required="true"
                                                            rootPath="/content"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </socialOptions>
                                </items>
                            </column>
                        </items>
                    </socialOptions>
                    <alignment
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container"
                        class="hide list-view-hide-show"
                        showhidetargetvalue="verical-link-list">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <alignment
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldLabel="Alignment"
                                        name="./alignment"
                                        required="true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="Left"
                                                value="alignLeft"/>
                                            <right
                                                jcr:primaryType="nt:unstructured"
                                                text="Right"
                                                value="alignRight"/>
                                            <centre
                                                jcr:primaryType="nt:unstructured"
                                                text="Centre"
                                                value="alignCenter"/>
                                        </items>
                                    </alignment>
                                </items>
                            </column>
                        </items>
                    </alignment>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
