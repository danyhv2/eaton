<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Title"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Title - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
            margin="{Boolean}false"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <view
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        class="cq-dialog-dropdown-showhide"
                        cq-dialog-dropdown-showhide-target=".title-text-hide-show"
                        fieldLabel=" Header View&#xa;Type"
                        name="./view">
                        <items jcr:primaryType="nt:unstructured">
                            <header-only
                                jcr:primaryType="nt:unstructured"
                                text="Header only"
                                value="header-only"/>
                            <header-with-line
                                jcr:primaryType="nt:unstructured"
                                text="Header With Line"
                                value="header-with-line"/>
                            <header-with-by-line
                                jcr:primaryType="nt:unstructured"
                                text="Header With By Line"
                                value="header-with-by-line"/>
                        </items>
                    </view>
                    <transCatLabel
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        class="hide title-text-hide-show"
                        fieldLabel="Eyebrow"
                        name="./transCatLabel"
                        showhidetargetvalue="header-with-by-line"/>
                    <headerType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        fieldLabel="Header Type"
                        name="./headerType">
                        <items jcr:primaryType="nt:unstructured">
                            <h1
                                jcr:primaryType="nt:unstructured"
                                text="H1"
                                value="h1"/>
                            <h2
                                jcr:primaryType="nt:unstructured"
                                text="H2"
                                value="h2"/>
                            <h3
                                jcr:primaryType="nt:unstructured"
                                text="H3"
                                value="h3"/>
                            <h4
                                jcr:primaryType="nt:unstructured"
                                text="H4"
                                value="h4"/>
                            <h5
                                jcr:primaryType="nt:unstructured"
                                text="H5"
                                value="h5"/>
                        </items>
                    </headerType>
                    <transHeaderTitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        fieldLabel="Header"
                        name="./jcr:title"/>
                    <alignment
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/select"
                        class="hide title-text-hide-show"
                        fieldLabel="Alignment"
                        name="./alignment"
                        required="true"
                        showhidetargetvalue="header-with-line">
                        <items jcr:primaryType="nt:unstructured">
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="Left"
                                value="title-left"/>
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="title-right"/>
                            <centre
                                jcr:primaryType="nt:unstructured"
                                text="Centre"
                                value="title-center"/>
                        </items>
                    </alignment>
                    <transByLineText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                        class="hide title-text-hide-show"
                        fieldLabel="By Line Text"
                        name="./transByLineText"
                        showhidetargetvalue="header-with-by-line"/>
                    <byLineDate
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/datepicker"
                        class="hide title-text-hide-show"
                        displayedFormat="MMMM DD, YYYY "
                        fieldLabel="Date"
                        name="./byLineDate"
                        showhidetargetvalue="header-with-by-line"/>
                    <hide-component
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <hide-component
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        allowBulkEdit="{Boolean}true"
                                        name="./hidecomponent"
                                        text="Hide Component"
                                        value="hide-component"/>
                                </items>
                            </column>
                        </items>
                    </hide-component>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
