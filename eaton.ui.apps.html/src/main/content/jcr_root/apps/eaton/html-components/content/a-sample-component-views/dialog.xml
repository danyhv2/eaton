<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Component Properties - Classic UI"
                xtype="panel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <view
                            jcr:primaryType="cq:Widget"
                            allowBlank="false"
                            defaultValue="product-detail-card-family"
                            fieldDescription="Determine which variation of component to view"
                            fieldLabel="View"
                            fieldSubLabel=""
                            name="./view"
                            type="select"
                            xtype="selection">
                            <options jcr:primaryType="cq:WidgetCollection">
                                <product-detail-card-family
                                    jcr:primaryType="nt:unstructured"
                                    text="Product Detail Card-Family"
                                    value="product-detail-card-family"/>
                                <product-detail-card-sku
                                    jcr:primaryType="nt:unstructured"
                                    text="Product Detail Card - Sku"
                                    value="product-detail-card-sku"/>
                                <feature-block-1
                                    jcr:primaryType="nt:unstructured"
                                    text="Feature Block - 1"
                                    value="feature-block-1"/>
                                <feature-block-2
                                    jcr:primaryType="nt:unstructured"
                                    text="Feature Block - 2"
                                    value="feature-block-2"/>
                                <feature-block-3
                                    jcr:primaryType="nt:unstructured"
                                    text="Feature Block - 3"
                                    value="feature-block-3"/>
                            </options>
                        </view>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
