<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Title Text Image Link"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text &amp; Image - Sightly">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <view
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/form/select"
                fieldLabel="view"
                name="./view">
                <items jcr:primaryType="nt:unstructured">
                    <text-with-listonly
                        jcr:primaryType="nt:unstructured"
                        text="Text-With-List Only"
                        value="text-with-listonly"/>
                    <text-with-list-with-downloadIcon
                        jcr:primaryType="nt:unstructured"
                        text="Text-with-List-with-Download Icon"
                        value="text-with-list-with-downloadIcon"/>
                    <specifications
                        jcr:primaryType="nt:unstructured"
                        text="Specifications"
                        value="specifications"/>
                    <text-with-list-with-download-sku
                        jcr:primaryType="nt:unstructured"
                        text="text-with-list-with-download-sku"
                        value="text-with-list-with-download-sku"/>
                    <text-with-list-authored
                        jcr:primaryType="nt:unstructured"
                        text="text-with-list-authored"
                        value="text-with-list-authored"/>
                </items>
            </view>
        </items>
    </content>
</jcr:root>
