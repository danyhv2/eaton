<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
	xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0" jcr:primaryType="nt:unstructured"
	jcr:title="Breadcrumb" sling:resourceType="cq/gui/components/authoring/dialog"
	helpPath="https://www.adobe.com/go/aem6_2_docs_component_en#Text - Sightly">
	<content jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/foundation/container">
		<layout jcr:primaryType="nt:unstructured"
			sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
			margin="{Boolean}false" type="nav" />
		<items jcr:primaryType="nt:unstructured">
			<column jcr:primaryType="nt:unstructured"
				sling:resourceType="granite/ui/components/foundation/container">
				<items jcr:primaryType="nt:unstructured">
					<view jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/form/select"
						fieldLabel="view" name="./view">
						<items jcr:primaryType="nt:unstructured">
							<!-- <long jcr:primaryType="nt:unstructured" text="Long Breadcrumb" 
								value="long"/> -->
							<primary-landing jcr:primaryType="nt:unstructured"
								text="Primary Landing" value="primary-landing" />
							<article jcr:primaryType="nt:unstructured" text="Article"
								value="article" />								
							<global-careers	jcr:primaryType="nt:unstructured" text="Global-Careers"
								value="global-careers" />
							<investor-relations	jcr:primaryType="nt:unstructured" text="Investor-Relations"
								value="investor-relations" />
							<news-media jcr:primaryType="nt:unstructured" text="News-and-Media"
								value="news-media" />
							<news-releases jcr:primaryType="nt:unstructured" text="News-Releases"
								value="news-releases" />
							<backup-power-ups jcr:primaryType="nt:unstructured" text="Backup Power UPS"
								value="backup-power-ups" />
																								
                             <secondary-landing
                                jcr:primaryType="nt:unstructured"
                                text="Secondary Landing"
                                value="secondary-landing"/>

			    
			    
			    
			    <career-page
                                jcr:primaryType="nt:unstructured"
                                text="Career Page"
                                value="career-page"/>
						</items>
					</view>
					<hide-component jcr:primaryType="nt:unstructured"
						sling:resourceType="granite/ui/components/foundation/form/checkbox"
						allowBulkEdit="{Boolean}true" cq-msm-lockable="hide-component"
						name="./hide-component" renderReadOnly="{Boolean}true" text="Hide Component"
						value="true" />
				</items>
			</column>
		</items>
	</content>
</jcr:root>
